@model EquipmentRental.UI.Models.AddEquipmentRentalViewModel

@{
}

<h1 class="mt-3">Add Equipment</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Equipment Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="mt-3">
        <label class="form-label">Rented? (Enter true or false)</label>
        <input type="text" class="form-control" asp-for="Rented" />
    </div>
    <div class="mt-3">
        <label class="form-label">Customer ID</label>
        <input type="text" class="form-control" asp-for="CustomerId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Location ID</label>
        <input type="text" class="form-control" asp-for="LocationId" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
