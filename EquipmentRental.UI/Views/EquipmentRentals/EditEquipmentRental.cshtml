@model EquipmentRental.UI.Models.DTO.EquipmentDTO

@{
}

<h1 class="mt-3">Edit Equipment</h1>

@if(Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" readonly asp-for="Id" />
        </div>
        <div class="mt-3">
            <label class="form-label">Equipment Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>
        <div class="mt-3">
            <label class="form-label">Rented?</label>
            <select class="form-control" asp-for="Rented" asp-items="@Model.RentedOptions"></select>
        </div>
        <div class="mt-3">
            <label class="form-label">Customer ID</label>
            <select class="form-control" asp-for="CustomerId" asp-items="@Model.Customers"></select>
        </div>
        <div class="mt-3">
            <label class="form-label">Location ID</label>
            <select class="form-control" asp-for="LocationId" asp-items="@Model.Locations"></select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button asp-controller="EquipmentRentals" asp-action="DeleteEquipmentRental" type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
}

