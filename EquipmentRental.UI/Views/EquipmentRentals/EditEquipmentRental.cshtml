@model EquipmentRental.UI.Models.DTO.EquipmentDTO

@{
}

<h1 class="mt-3">Edit Equipment</h1>

@if(Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Equipment Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>
        <div class="mt-3">
            <label class="form-label">Rented? (Enter true or false)</label>
            <input type="text" class="form-control" asp-for="Rented" />
        </div>
        <div class="mt-3">
            <label class="form-label">Customer ID</label>
            <input type="text" class="form-control" asp-for="Customer.Id" />
        </div>
        <div class="mt-3">
            <label class="form-label">Location ID</label>
            <input type="text" class="form-control" asp-for="Location.Id" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button asp-controller="EquipmentRentals" asp-action="DeleteEquipmentRental" type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
}

